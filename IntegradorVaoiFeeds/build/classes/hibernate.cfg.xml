<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/integrador</property>
        <property name="hibernate.connection.username">postgres</property>
        <mapping resource="co/edu/usbcali/modelo/CategoriasArticulos.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Articulos.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Colecciones.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/ColeccionesRss.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Rss.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Usuarios.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Categorias.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Entradas.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/EventosArticulos.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Roles.hbm.xml" />
        <mapping resource="co/edu/usbcali/modelo/Anexos.hbm.xml" />
    </session-factory>
</hibernate-configuration>
